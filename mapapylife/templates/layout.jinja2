<!DOCTYPE html>
<html lang="pl">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{% block description %}{% endblock %}">
    <meta name="author" content="David Sn, Encryptize, and GitHub contributors">
    <meta name="generator" content="pylife-fastapi">

    <title>{% block title %}{% endblock %}</title>

    <!-- Open Graph -->
    <meta property="og:title" content="{{ self.title() }}">
    <meta property="og:type" content="website">
    <meta property="og:description" content="{{ self.description() }}">
    <meta property="og:url" content="https://mapapy.life/">
    <meta property="og:image" content="https://mapapy.life/static/favicon/apple-touch-icon.png">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', path='favicon/apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', path='favicon/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', path='favicon/favicon-16x16.png') }}">
    <link rel="shortcut icon" href="{{ url_for('static', path='favicon/favicon.ico') }}">
    <meta name="theme-color" content="#343a40">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="{{ url_for('static', path='css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', path='css/fontawesome.min.css') }}">

    <!-- Mapa PYLife.pl -->
    <link rel="stylesheet" href="{{ url_for('static', path='css/leaflet.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', path='css/leaflet-easy-button.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', path='css/leaflet-responsive-popup.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', path='css/map.css') }}">

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-54671102-5"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}

        gtag('js', new Date());
        gtag('config', 'UA-54671102-5');
    </script>
</head>

<body>
    <!-- Site navigation -->
    <header class="navbar navbar-expand-md navbar-dark sticky-top bg-dark shadow">
        <h1 class="navbar-brand mb-0 mr-3">
            <img src="{{ url_for('static', path='images/logo.svg') }}" width="auto" height="30" alt="Mapa PY.Life">
        </h1>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <!-- Search form -->
            <form class="form-inline my-2 my-md-0" onsubmit="return false">
                <div class="input-group">
                    <input class="form-control" id="search" type="text" name="search" placeholder="Szukaj na mapie..." dir="ltr" spellcheck=false autocorrect="off" autocomplete="off" autocapitalize="off">
                    <div class="input-group-append">
                        <button class="btn btn-outline-light" id="submit" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
            </form>

            <!-- Links -->
            <ul class="navbar-nav ml-auto visible-md">
                <!-- Discord -->
                <li class="nav-item">
                    <a class="nav-link" href="https://discord.com/invite/hxEYenvNXY"><i class="fa-brands fa-discord fa-fw"></i> Discord</a>
                </li>

                <!-- Radio K69 -->
                <li class="nav-item">
                    <a class="nav-link" href="https://k69py.life"><i class="fa-solid fa-radio fa-fw"></i> Radio K69</a>
                </li>

                <!-- Panel Play Your Life -->
                <li class="nav-item">
                    <a class="nav-link" href="https://panel.pylife-rpg.pl"><i class="fa-solid fa-right-from-bracket fa-fw"></i> Panel PYLife</a>
                </li>
            </ul>
        </div>
    </header>

    {% block content %}{% endblock %}

    <!-- Optional JavaScript -->
    <script type="text/javascript" src="{{ url_for('static', path='js/jquery-3.7.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/bootstrap.bundle.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/bootstrap3-typeahead.min.js') }}"></script>

    <!-- Mapa PYLife.pl -->
    <script type="text/javascript" src="{{ url_for('static', path='js/leaflet.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/leaflet-easy-button.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/leaflet-rastercoords.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/leaflet-responsive-popup.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/dayjs.min.js') }}"></script>
    <script type="text/javascript" src="{{ url_for('static', path='js/map.js') }}"></script>
</body>

</html>
